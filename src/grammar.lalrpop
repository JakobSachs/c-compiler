use std::str::FromStr;

use crate::ast::{Func,Program};

grammar;

pub Program: Program = {
  Func* => 
}

Func: Func= {
  Type Identifier "(" ")" "{" Statement "}"
}

Statement = {
  "return" Num ";"
}

Type = {
  "int", 
  "void"
}

Identifier: String = {
  r"[_a-zA-Z][_a-zA-Z0-9]{0,30}" => <>.to_owned()
}

Num: i32 = {
    r"[0-9]+" => i32::from_str(<>).unwrap(),
};

